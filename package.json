{
  "name": "cochrane-meta-mcp",
  "version": "0.1.0",
  "description": "MCP server for Cochrane-compliant meta-analysis workflows",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "cochrane-meta-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc --incremental && chmod +x dist/index.js",
    "build:fast": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --external:@modelcontextprotocol/sdk --external:xlsx --format=esm && chmod +x dist/index.js",
    "dev": "tsc --watch --incremental",
    "prepare": "npm run build || npm run build:fast",
    "test": "jest"
  },
  "keywords": [
    "mcp",
    "meta-analysis",
    "cochrane",
    "systematic-review",
    "revman",
    "medical-research"
  ],
  "author": "Matheus Rech",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "csv-parse": "^5.6.0",
    "zod": "^3.24.1",
    "winston": "^3.17.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
